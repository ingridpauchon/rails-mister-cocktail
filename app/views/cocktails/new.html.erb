<div class="container mt-5 p-5 bg-success">
  <h1>New cocktail 🍸 </h1>
<%= simple_form_for [ @cocktail ] do |f| %>
  <%= f.input :name, :maxlength => 16 %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Add cocktail", class: "btn btn-info" %>
<% end %>
<%= link_to 'Back', cocktails_path, class: "btn btn-info mt-3" %>
</div>
