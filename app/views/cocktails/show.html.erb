<h1> <%= @cocktail.name %> </h1>

<% @doses.each do |dose| %>
<p>Ingredient: <%= dose.ingredient.name %> (<%= dose.description %>)</p>
<%= link_to 'delete', dose_path(dose), method: :delete,
                  data: { confirm: "Are you sure?" }, class: "btn btn-primary" %>
<% end %>

<%= link_to 'Add new', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
